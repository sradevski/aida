{
  "name": "aida",
  "version": "0.0.1",
  "description": "Full-stack schema definition, validation, and fake api generation",
  "repository": "https://bitbucket.org/flencer/validstack",
  "author": "Stevche Radevski <sradevski@live.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --ci",
    "test:update": "jest -u",
    "test:watch": "jest --watch --coverage -u",
    "test:coverage": "jest --coverage --collectCoverageFrom=**/*{.js,.jsx} ",
    "flow": "flow",
    "audit": "npm audit",
    "lint": "eslint packages --fix ",
    "precommit": "lint-staged"
  },
  "jest": {
    "rootDir": "packages",
    "testMatch": [
      "**/?(*.)(unit|test).?(m)js?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "mjs",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/output/",
      "/coverage/"
    ]
  },
  "lint-staged": {
    "packages/**/*.{js,mjs,jsx,css}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.58.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.0.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.10.2",
    "lerna": "^2.11.0"
  },
  "dependencies": {
    "lodash": "^4.17.10"
  }
}
